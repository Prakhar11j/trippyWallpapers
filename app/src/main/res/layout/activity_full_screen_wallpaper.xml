<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.pixelwallpaper.FullScreenWallpaper">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnSetWallpaper"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="18dp"
            android:background="@drawable/btn_share"
            android:fontFamily="@font/bold"
            android:onClick="SetWallpaperEvent"
            android:padding="5dp"
            android:text="Set Wallpaper"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnDownloadWallpaper"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="3.5dp"
            android:background="@drawable/btn_download"
            android:onClick="DownloadWallpaperEvent"
            android:src="@drawable/ic__download_24" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnSave"
            android:layout_marginHorizontal="3.5dp"
            android:background="@drawable/btn_download"
            android:onClick="likeThis"
            android:src="@drawable/ic_favorite_white_24" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="3.5dp"
            android:onClick="shareImg"
            android:background="@drawable/btn_download"
            android:src="@drawable/ic_share_24" />


    </LinearLayout>


    <Button
        android:id="@+id/buttonback"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_back_in_full_24"
        android:onClick="back01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>